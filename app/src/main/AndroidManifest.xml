<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.legendsbunkv2">
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".FutureAttendanceResult"></activity>
        <activity android:name=".DeleteSubjectActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.legendsbunkv2.Intros.HomeFragmentIntro"
            android:label="Attendance Manager" />
        <activity android:name="com.example.legendsbunkv2.Intros.LogPastIntro"
            android:label="Attendance Manager" />
        <activity android:name="com.example.legendsbunkv2.Intros.TimeTableIntro"
            android:label="Attendance Manager" />
        <activity android:name="com.example.legendsbunkv2.Intros.PostTimeTableIntro"
            android:label="Attendance Manager" />
        <activity android:name="com.example.legendsbunkv2.Intros.HistoryIntro"
            android:label="Attendance Manager" />
        <activity android:name="com.example.legendsbunkv2.Intros.ClassBunkIntro"
            android:label="Attendance Manager" />
        <activity android:name="com.example.legendsbunkv2.Intros.VacationIntro"
            android:label="Attendance Manager" />

        <meta-data
            android:name="DATABASE"
            android:value="sugar_example.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>