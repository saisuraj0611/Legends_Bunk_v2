<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_1000"
    app:layout_constrainedHeight="true">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_131sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_127sdp"
        android:fontFamily="@font/secular_one_cumilative"
        android:shadowColor="#FFFFFF"
        android:text="Delete Subjects"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
        android:id="@+id/deleteSubjectUltimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@android:color/black"
        android:padding="@dimen/_3sdp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/deleteCheckedSubjects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constrainedHeight="true"/>

    <Button
        android:id="@+id/deleteCheckedSubjects"
        android:layout_width="@dimen/_57sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_125sdp"
        android:layout_marginEnd="@dimen/_125sdp"
        android:layout_marginBottom="12dp"
        android:background="#000000"
        android:fontFamily="@font/prompt"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>